<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/setting_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.15"
            android:fontFamily="@font/bmhanna_11yrs_ttf"
            android:gravity="center|left"
            android:text="Type of Info"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

        <Switch
            android:id="@+id/control_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="60dp"
            android:switchPadding="20dp"
            android:thumbTint="@color/navy"></Switch>

    </LinearLayout>

    <ImageView
        android:id="@+id/sub_divline"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:src="@drawable/color_grey_round"></ImageView>
</LinearLayout>