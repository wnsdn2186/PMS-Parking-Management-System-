<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/sky"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:singleLine="true"
                android:textSize="40dp"></EditText>

            <EditText
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:singleLine="true"
                android:textSize="40dp"></EditText>

            <EditText
                android:id="@+id/third"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:singleLine="true"
                android:textSize="40dp"></EditText>

            <EditText
                android:id="@+id/fourth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:singleLine="true"
                android:textSize="40dp"></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bmhanna_11yrs_ttf"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/grey"
                    android:textSize="30dp"></TextView>

                <TextView
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bmhanna_11yrs_ttf"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/grey"
                    android:textSize="30dp"></TextView>


                <TextView
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bmhanna_11yrs_ttf"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/grey"
                    android:textSize="30dp"></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/four"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bmhanna_11yrs_ttf"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/grey"
                    android:textSize="30dp"></TextView>

                <TextView
                    android:id="@+id/five"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bmhanna_11yrs_ttf"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/grey"
                    android:textSize="30dp"></TextView>


                <TextView
                    android:id="@+id/six"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bmhanna_11yrs_ttf"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/grey"
                    android:textSize="30dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/seven"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bmhanna_11yrs_ttf"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/grey"
                    android:textSize="30dp"></TextView>

                <TextView
                    android:id="@+id/eight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bmhanna_11yrs_ttf"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/grey"
                    android:textSize="30dp"></TextView>


                <TextView
                    android:id="@+id/nine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bmhanna_11yrs_ttf"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/grey"
                    android:textSize="30dp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bmhanna_11yrs_ttf"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="40dp"></TextView>

                <TextView
                    android:id="@+id/zero"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bmhanna_11yrs_ttf"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/grey"
                    android:textSize="30dp"></TextView>


                <ImageView
                    android:id="@+id/deleteBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="45dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_arrow_back_24"></ImageView>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>