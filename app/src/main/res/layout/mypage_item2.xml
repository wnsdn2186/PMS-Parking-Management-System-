<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mypage_sub_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.15"
            android:fontFamily="@font/bmhanna_11yrs_ttf"
            android:gravity="center|left"
            android:text="Type of Info"
            android:textSize="20dp"
            android:textColor="@color/black"></TextView>

        <ImageView
            android:id="@+id/mypage_sub_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_forward_36"></ImageView>

    </LinearLayout>

    <ImageView
        android:id="@+id/sub_divline"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:src="@drawable/color_gray_round"></ImageView>
</LinearLayout>